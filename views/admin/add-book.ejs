<%-include('../layouts/header.ejs')%>
<%-include('../layouts/admin-navbar.ejs')%>

<div class="container-fluid px-5 py-4">
    <h2 class="text-center text-info mb-3">Add New Book</h2>
        <form action="/admin/add-book" method="post" enctype="multipart/form-data">
            <div class="form-outline mb-4">
                <input type="text" class="form-control" name="title" placeholder="Book Title" required>
            </div>

             <div class="form-outline mb-4">
                <textarea class="form-control" name="about" placeholder="Enter Description" row="5" required></textarea>
            </div>

            <div class="form-outline mb-4">
                <input type="file" class="form-control-file" name="image" required>
            </div>

            <div class="form-outline mb-4">
                <input type="text" class="form-control" name="price" placeholder="Price" required>
            </div>

            <div class="form-outline mb-4">
                <input type="text" class="form-control" name="stock" placeholder="Stock" required>
            </div>

            <div class="form-outline mb-4">
                <select class="form-control" name="genre" required>
                    <option value="" selected disabled>Select Genre</option>
                    <% genres.forEach(genre=> { %>
                        <option value="<%= genre.name %>">
                                <%= genre.name %>
                            </option>
                            <% }); %>
                    </select>
            </div>

            <div class="form-outline mb-4">
                <select class="form-control" name="author" required>
                    <option value="" selected disabled>Select Author</option>
                    <% authors.forEach(author=> { %>
                        <option value="<%= author.name %>">
                            <%= author.name %>
                        </option>
                    <% }); %>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Add Book">
                <a class="btn btn-secondary" href="/admin/home">Back to Home</a>
            </div>

        </form>
        <% if (typeof message !=='undefined' ) { %>
            <p style="color:red;">
                <%= message %>
            </p>
        <% } %>
</div>
<%include('../layouts/footer.ejs')%>