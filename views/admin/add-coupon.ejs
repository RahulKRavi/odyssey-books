<%- include('../layouts/header.ejs') %>
<%- include('../layouts/admin-navbar.ejs') %>

<div class="container-fluid px-5 py-4">
    <h2 class="text-center text-info mb-3">Add New Coupon</h2>
    <form action="/admin/add-coupon" method="post">

        <div class="form-outline mb-4">
            <input type="text" class="form-control" name="code" placeholder="Coupon Code" required />
        </div>

        <div class="form-outline mb-4">
            <input type="number" class="form-control" name="discount" placeholder="Discount" required />
        </div>

        <div class="form-outline mb-4">
            <input type="date" class="form-control" name="expirationDate" placeholder="Expiration Date" required />
        </div>

        <div class="form-outline mb-4">
            <input type="number" class="form-control" name="minimumOrderAmount" placeholder="Minimum Order Amount" />
        </div>

        <div class="form-outline mb-4">
            <label for="isActive">Is Active?</label>
            <select class="form-select" name="isActive">
                <option value="1" selected>Yes</option>
                <option value="0">No</option>
            </select>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Add Coupon">
            <a class="btn btn-secondary" href="/admin/list-coupons">Back to Home</a>
        </div>

    </form>
    <% if (typeof message !== 'undefined') { %>
        <p style="color:green;">
            <%= message %>
        </p>
    <% } %>
</div>

<%- include('../layouts/footer.ejs') %>
