<%-include('../layouts/header.ejs')%>
<%-include('../layouts/admin-navbar.ejs')%>

<div class="container-fluid px-5 py-4">
    <h2 class="text-center text-info mb-3">Edit Book</h2>
        <form action="/admin/edit-book" method="post">

            <div class="form-outline mb-4">
                <input type="text" class="form-control" name="name" placeholder="Book Title" value="<%= books.title %>" required>
            </div>

            <div class="form-outline mb-4">
                <textarea class="form-control" name="about" placeholder="Enter Description" row="5" required><%= books.about %></textarea>
            </div>

            <div class="form-outline mb-4">
                <input type="text" class="form-control" name="price" placeholder="Book Price" value="<%= books.price %>" required>
            </div>

            <div class="form-outline mb-4">
                <input type="text" class="form-control" name="stock" placeholder="Stock" value="<%= books.stock %>" required>
            </div>

            <div class="form-group">
                <input type="hidden" name="id" value="<%= books._id %>">
                <input type="submit" class="btn btn-primary" value="Update Book">
                <a class="btn btn-secondary" href="/admin/home">Back to Home</a>
            </div>

        </form>
        <% if (typeof message !=='undefined' ) { %>
            <p style="color:red;">
                <%= message %>
            </p>
        <% } %>
</div>

<%include('../layouts/footer.ejs')%>