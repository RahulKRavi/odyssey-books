<%-include('../layouts/header.ejs')%>
<%-include('../layouts/user-navbar.ejs')%>
<%-include('../layouts/user-info.ejs')%>

<section class="cart-total-page spad">
    <div class="container mt-5">
        <form action="#" class="checkout-form">
            <div class="row">
                <div class="col-lg-12">
                     <h3>Your Addresses</h3>
                </div>
            </div>
            <div class="row">
                <% if (address.length>0){%>
                    <% for (let i=0;i<address.length; i++) { %>
                        <div class="col-sm-6">
                            <div class="card text-black text-center  mb-3" style="background: #e4ecf0;">
                                
                                <div class="card-header">
                                    <%= address[i].title %>
                                </div>

                                <div class="card-body">
                                    <p class="card-text">
                                        <%= address[i].fname %>
                                        <%= address[i].lname %><br>
                                        <%= address[i].house %><br>
                                        <%= address[i].street %><br>
                                        <%= address[i].city %><br>
                                        <%= address[i].district %><br>
                                        <%= address[i].pin %><br>
                                    </p>
                                    <a href="/edit-address?id=<%= address[i]._id %>" class="btn btn-primary">EDIT</a>
                                    <a href="/delete-address?id=<%= address[i]._id %>"  class="btn btn-dark">DELETE</a>
                                </div>

                            </div>
                        </div>
                    <% } %>
                <% } %>
                       <div class="col-sm-6">
                            <div class="card text-white text-center mb-3" style="min-height: 18rem; background: #eff2f4;">
                                <div class="card-body d-flex justify-content-center align-items-center">
                                    <a href="/add-address" class="btn btn-dark">ADD NEW ADDRESS</a>
                                </div>
                            </div>
                        </div>
            </div>
        </form>
    </div>
</section>

<%-include ('../layouts/user-footer.ejs')%>