
<%-include('../layouts/header.ejs') %>

<style>
      body{background-color: #ffffff;}
</style>

<section class = "vh-100">
    <div class = "container py-3 h-100 ">
        <div class = "row d-flex justify-content-center align-items-center h-100 ">
            <div class = "col-12 col-md-6 col-lg-4 col-xl-6">
                <div class = "card" style = "border-radius: 20px; background-color:#b0bcc2">
                    <div class = "card-body p-2 mx-5">
                        <h2 class = "text-uppercase text-center mt-5">VERIFY OTP</h2>

                        <form action = "/verify-otp" method = "post">
                            <div class = "form-outline form-white mt-4 mx-5">
                                <input type = "text" id = "verifyOTP" name = "otp" class = "form-control form-control-md" placeholder = "Enter the OTP" required/>
                            </div>

                            <div class = "d-flex justify-content-center mt-4 ">
                                <input type = "submit"  value = "VERIFY" class = "btn btn-dark px-5">
                            </div>

                            <div class = "d-flex justify-content-center mt-4">
                                <p style="color: rgb(253, 4, 4); font-weight: bold; " id="errorMessage">
                                    <%=(typeof message!=='undefined' )?message:""%>
                                </p>
                            </div>
                        </form>
                        
                    </div>
                <div>
            </div>
        </div>
    </div>   
</section>
   
<%-include ('../layouts/footer.ejs')%>